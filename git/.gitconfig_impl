# include this file in your .gitconig as
# [include]
#	path=.gitconfig_impl


[alias]
    co = checkout
    ci = commit
    st = status
    new = checkout -b
    hist = log --pretty=format:\"%h %ad | %s%Cblue%d%Cgreen [%an]%Creset\" --graph --date=short
    upmaster = fetch origin master:master
    wip = commit -m WIP
    amend = commit --amend
[core]
    editor = nvim
    pager = less -FRX
[pull]
    ff = only
[push]
    default = upstream
